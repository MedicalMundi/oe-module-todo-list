<nav class="navbar navbar-expand navbar-light bg-white static-top">


    {% if module.isStandAlone %}
        <a class="navbar-brand mr-1" href="/">{{ module.name }}</a>
    {% else %}
        <a class="navbar-brand mr-1" href="/interface/modules/custom_modules/oe-module-todo-list">{{ module.name }}</a>
    {% endif %}


    <button class="btn btn-link btn-sm order-1 order-sm-0 text-dark" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="hidden-sm" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{#{{ path('property') }}#}">{{ 'menu.dashboard' }}</a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    {{ 'menu.filter' }}
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{#{{ path('todo_list_open') }}#}">{{ 'menu.filter.open' }}</a>
                    <a class="dropdown-item" href="{#{{ path('todo_list_closed') }}#}">{{ 'menu.filter.closed' }}</a>
                </div>
            </li>
        </ul>
    </div>

    <div class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0"></div>

    <ul class="navbar-nav ml-auto ml-md-0">

        <li class="nav-item dropdown no-arrow mx-1">
            <a class="nav-link dropdown-toggle"
               href="#"
               id="addDropdown"
               role="button"
               data-toggle="dropdown"
               aria-haspopup="true"
               aria-expanded="false">
                <i class="fas fa-plus-square text-danger"></i>
                <span class="hidden-sm">{{ 'menu.add_new' }}</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="addDropdown">
                {% if module.isStandAlone %}
                    <a class="dropdown-item" href="/todos/new">{{ 'menu.add_new.todo' }}</a>
                    <a class="dropdown-item" href="/help">{{ 'help' }}</a>
                {% else %}
                    <a class="dropdown-item" href="/interface/modules/custom_modules/oe-module-todo-list/todos/new">{{ 'menu.add_new.todo' }}</a>
                    <a class="dropdown-item" href="/interface/modules/custom_modules/oe-module-todo-list/help">{{ 'help' }}</a>
                {% endif %}
            </div>
        </li>

        <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle"
               href="#" id="settingDropdown"
               role="button"
               data-toggle="dropdown"
               aria-haspopup="true"
               aria-expanded="false">
                {{ 'menu.settings' }}
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="settingDropdown">
                <a class="dropdown-item" href="{#{{ path('app_account_me') }}#}">
                    {{ 'menu.settings.global_preference' }}
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{# {{ path('app_logout') }} #}">
                {{ 'menu.settings.user_preference' }}
                </a>
                {% if module.isStandAlone %}
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/dashboard">
                        {{ 'menu.dashboard' }}
                    </a>
                {% endif %}
            </div>
        </li>
    </ul>
</nav>
